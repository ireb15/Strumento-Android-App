<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8E1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_height="match_parent"
                android:layout_width="410dp">

                <RelativeLayout
                    android:layout_width="410dp"
                    android:layout_height="280dp">

                    <LinearLayout
                        android:id="@+id/llImage1"
                        android:layout_width="410dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivInstrumentCover1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llImage2"
                        android:layout_width="410dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/llImage1">

                        <ImageView
                            android:id="@+id/ivInstrumentCover2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llImage3"
                        android:layout_width="410dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/llImage2">

                        <ImageView
                            android:id="@+id/ivInstrumentCover3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                    </LinearLayout>
                </RelativeLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="text"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/tvSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvColour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>